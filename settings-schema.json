{
    "menu-width": {
        "type" : "spinbutton",
        "default" : 15,
        "min" : 15,
        "max" : 100,
        "step" : 0.1,
        "units" : "%",
        "description" : "Menu width"
    },
    "menu-height": {
        "type" : "spinbutton",
        "default" : 90,
        "min" : 50,
        "max" : 100,
        "step" : 0.1,
        "units" : "%",
        "description" : "Menu Height"
    },
    "menu-shortcut": {
        "type":"keybinding",
        "description":"Shortcut to open or close the menu",
        "default":"Super_L::Super_R"
    },
    "custom-start-menu-color": {
        "type":"switch",
        "default":"false",
        "description":"Use custom start menu color"
    },
    "start-menu-color": {
        "type":"colorchooser",
        "description":"Start menu's background color",
        "default":"rgb(255, 255, 255)",
        "dependency":"custom-start-menu-color"
    },
    "menu-editor-button": {
        "type":"button",
        "description":"Open the menu editor",
        "callback":"launchMenuEditor"
    }
}

